@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input class="form-control" type="search" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-outline-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach(var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant"></partial>
}

<div>
    <a class="btn btn-primary" asp-page="./Edit">Add Restaurant</a>
</div>

@section footer {
    <div>
        @Model.Message
    </div>
}
